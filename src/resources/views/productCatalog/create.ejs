<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">

</head>
<body>
    <div class="mt-4">
        <div class="container">
            <h1 style="display: flex; justify-content: center;">Tạo ProductCatalog</h1>
            <form method="post" action="/api/productCatalog/create/store">
                <div class="mb-3">
                    <label for="idCatalog" class="form-label">Chọn catalog</label>
                    <select name="idCatalog" class="form-select" aria-label="Default select example">
                        <option selected>--- select ---</option>
                        <% listMenu.map((menu, index) => { %>
                            <option>----- <%= menu.name %>  -----</option>
                            <% listCatalog.map((catalog, index) => { %>
                                <% if(catalog.idMenu === menu._id) { %>
                                    <option value=<%= catalog._id %> > <%= catalog.name %> </option>
                                <% } %>
                            <% }) %>
                        <% }) %>
                    </select>
                    <label for="idProduct" class="form-label">Chọn product</label>
                    <select name="idProduct" class="form-select" aria-label="Default select example">
                        <option selected>--- select ---</option>
                        <% listProduct.map((product, index) => { %>
                            <option value=<%= product._id %> > <%= product.name %> </option>
                        <% }) %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Thêm productCatalog</button>
            </form>
            <a href="/api/product/create">
                <button type="submit" class="btn btn-secondary mt-4">Tạo product khác</button>
            </a>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>