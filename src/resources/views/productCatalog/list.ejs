<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
    <% var count = 0; %>
    <div class="app">
        <div class="container">
            <h3>
                <a href="/">Trang chủ</a>
            </h3>
            <a href="/api/productCatalog/trash" style="margin-right: 50px;">Thùng rác</a>
            <a href="/api/productCatalog/create">Thêm dữ liệu</a>
            <div class="d-flex align-items-center mt-2 ps-2">
                <select class="form-select select__control" aria-label="Default select example" name="action">
                    <option value="select" selected>-- Select all --</option>
                    <option value="delete">Xóa</option>
                </select>
                <button class="btn btn-primary w-100 h-100 p-1 bg-primary ms-2 btn__submit">Thực hiện</button>
            </div>
        
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th scope="col" > 
                            <div class="form-check">
                                <input class="value-check-input" type="checkbox" name="courseIds[]" value="" id="checkboxAll">
                            </div>
                        </th>
                        <th scope="col">
                            ID
                        </th>
                        <th scope="col">
                            Tên product
                        </th>
                        <th scope="col">
                            Tên catalog
                        </th>
                        <th scope="col">Thời gian tạo</th>   
                        <th scope="col">Status</th>   
                    </tr>
                </thead>
                <tbody>
                    <% if(data.length === 0) { %>
                        <tr class="text-center">
                            <td colspan="6">
                                Không có catalogProduct nào hoặc đã bị xóa
                                <a href="/api/productCatalog/create">Hãy vào tạo catalogProduct</a> hoặc
                                <a href="/api/productCatalog/trash">Hãy vào thùng rác</a>
                            </td>
                        </tr>
                    <% } else { %> 
                        <% data.map((childData, index) => {  %>
                            <tr>
                                <th>
                                    <div class="form-check">
                                        <input class="value-check-input" type="checkbox" name="courseIds[]" value="" id="flexCheckChecked" data-id=<%= childData._id %>>
                                    </div>
                                </th>
                                <td scope="row"><%= childData._id %></td>
                                <% count = 0; %>
                                <% dataProduct.map((product, index) => { %>
                                    <% if(childData.idProduct === product._id) { %>
                                        <td scope="row"><%= product.name %> </td>
                                        <% count++ %>
                                    <% } %>
                                <%}) %>
                                <% if(count === 0) { %>
                                    <td scope="row">Null</td>
                                <% } %>
                                <% count = 0; %>
                                <% dataCatalog.map(catalog => { %>
                                    <% if(childData.idCatalog === catalog._id) { %>
                                        <td scope="row"><%= catalog.name %> </td>
                                        <% count++ %>
                                    <% } %>
                                <%}) %>
                                <% if(count === 0) { %>
                                    <td scope="row">Null</td>
                                <% } %>
                                <td scope="row"><%= childData.createdAt %></td>
                                <td>
                                    <a href="/api/productCatalog/edit/<%= childData._id %>" class="btn btn-link">Sửa</a>
                                    <a href="" class="btn btn-link btn__deleteSingle" data-bs-toggle="modal" data-bs-target="#delete-course-modal" data-id=<%= childData._id %>>Xóa</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
            <div class="modal" tabindex="-1" id="delete-course-modal" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Notification</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this field?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-danger btn-delete">Delete</button>
                    </div>
                    </div>
                </div>
            </div>
        
            <form method="POST" name="delete-course-form"></form>
        </div>
    </div>

    <script>
        const $ = document.querySelector.bind(document);
        const $$ = document.querySelectorAll.bind(document);

        const deleteCourseModal = document.getElementById('delete-course-modal');
        const btnDelete = $(".btn-delete");
        const formDelete = document.forms['delete-course-form'];
        const btnSubmit = document.querySelector(".btn__submit");
        const btnAllProduct = document.querySelector("#checkboxAll");
        const allCheckboxProduct = document.querySelectorAll("#flexCheckChecked");
        const selectControl = document.querySelector(".select__control");
        const btnDeleteSingle = $('.btn__deleteSingle');
        
        let idForm;

        btnDeleteSingle.onclick = () => {
            formDelete.setAttribute("type", "brand");
        }

        if (deleteCourseModal) {
            deleteCourseModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget
                idForm = button.getAttribute('data-id');
            })
        }

        btnDelete.addEventListener("click", (e) => {
            let array = [];
            let str = formDelete.getAttribute("type");
            if(str === "brand")
            {
                array = [
                    ...array,
                    idForm
                ]
            }
            else
            {
                allCheckboxProduct.forEach((item, index) =>{
                    if(item.checked)
                    {
                        id = item.getAttribute('data-id');
                        array = [
                            ...array,
                            id
                        ]
                    }
                })
            }
            formDelete.action = "/api/productCatalog/list/delete/" + array + "/?_method=DELETE";
            formDelete.submit();
        })

        btnSubmit.addEventListener("click", () => {
             
            if(selectControl.value === "delete")
            {
                formDelete.setAttribute("type", "brands");
            }
            else
                alert("Vui lòng chọn phương thức!")
            
        })

        btnAllProduct.addEventListener("click", (e) => {
            allCheckboxProduct.forEach((item, index) =>{
                item.checked = e.target.checked;
            }) 
        })

        selectControl.addEventListener("change", () => {
            if(selectControl.value === "delete")
            {
                btnSubmit.setAttribute("data-bs-target", "#delete-course-modal");
                btnSubmit.setAttribute("data-bs-toggle", "modal");
            }
            else
            {
                btnSubmit.removeAttribute("data-bs-target");
                btnSubmit.removeAttribute("data-bs-toggle");
            }
        })

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    </body>
</html>