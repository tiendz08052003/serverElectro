<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">

</head>
<body>
    <div class="mt-4">
        <div class="container">
            <h3>
                <a href="/">Trang chủ</a>
            </h3>
            <h1 style="display: flex; justify-content: center;">Tạo productCatalog</h1>
            <form method="post" action="/api/productCatalog/update/<%= data._id %>/?_method=PUT">
                <div class="mb-3">
                    <label for="idCatalog" class="form-label">Chọn catalog</label>
                    <select name="idCatalog" class="form-select" aria-label="Default select example">
                        <option selected>--- select ---</option>
                        <% dataMenu.map((menu, index) => { %>
                            <option>----- <%= menu.name %>  -----</option>
                            <% dataCatalog.map((catalog, index) => { %>
                                <% if(catalog.idMenu === menu._id) { %>
                                    <% if (data.idCatalog === catalog._id) {%>
                                        <option selected value=<%= catalog._id %> > <%= catalog.name %> </option>
                                    <%} else {%>
                                        <option value=<%= catalog._id %> > <%= catalog.name %> </option>
                                    <% } %>
                                <% } %>
                            <% }) %>
                        <% }) %>
                    </select>
                    <label for="idProduct" class="form-label">Chọn product</label>
                    <select name="idProduct" class="form-select" aria-label="Default select example">
                        <option selected>--- select ---</option>
                        <% dataProduct.map((product, index) => { %>
                            <% if (data.idProduct === product._id) {%>
                                <option selected value=<%= product._id %> > <%= product.name %> </option>
                            <%} else {%>
                                <option value=<%= product._id %> > <%= product.name %> </option>
                            <% } %>
                        <% }) %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Sửa productCatalog</button>
            </form>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>